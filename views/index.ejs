                            <input type="text" id="end" class="form-control date-picker">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar"></i>
                                </span>
                            </div>
                          </div>
                    </div>

                    <br>
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    <button type="reset" class="btn btn-secondary btn-sm" onclick="resetNotes()">Reset</button>
