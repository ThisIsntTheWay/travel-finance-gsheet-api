</head>
<body>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ADD STUFF</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
            </div>
        </div>
        </nav><br><br>
    <div class="container">
        <div class="card">
            <div class="card-header">
            Add a new item
            </div>
            <div class="card-body">
                <form id="sheet-form" class="needs-validation" novalidate>

                    <!-- ========= Required fields ========= -->
                    <div class="form-group">
                        <label>Item</label>
                        <input type="text" class="form-control" id="item" name="item" placeholder="Item name" required>
                    </div>

                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-select" id="type" name="type">
                            <% for(var i=0; i < expenseTypes.length; i++) { %>
                                <option value='<%= expenseTypes[i] %>'><%= expenseTypes[i] %></option>
                            <% } %>
                        </select>
                    </div>

                    <!-- DATE MUST BE GENERATED AUTOMATICALLY -->

                    <div class="form-group">
                        <label>Currency</label>
                        <select class="form-select" id="currency" name="currency">
                            <% Object.keys(currencies).forEach(function(prop) { %>
                                <option value='<%- prop %>'><%- currencies[prop] %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Amount</label>
                        <input type="number" class="form-control" id="amount" name="amount" required>
                    </div>

                    <!-- ========= Optional fields ========= -->
                    <hr>
                    <div class="form-group">
                        <label>Notes</label>
                        <input type="text" class="form-control" id="notes" name="notes" placeholder="Notes">
                        <input class="form-check-input" type="checkbox" value="" id="set-gps">
                        <label class="form-check-label" for="set-gps">
                            Add GPS coords
                        </label>
                        <!-- Add GPS thing -->
                    </div>

                    <div class="form-group">
                        <label>Beginning</label>
                        <div class="input-group date">
                            <input type="text" name="beginning" class="form-control">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>End</label>
                        <div class="input-group date">
                            <input type="text" name="end" class="form-control">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>

                    <br>
                    <!-- <button type="button" class="btn btn-primary" id="submitButton">Submit</button> -->
                    <button class="btn btn-primary btn-sm" type="submit">Submit form</button>
                    <button type="reset" class="btn btn-secondary btn-sm" onclick="resetNotes()">Reset</button>
                </form>
            </div>
        </div>
    </div>

    <!-- POST Modal -->
    <div class="modal fade" id="resultModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Result</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <p id="resultMessage"></p>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Supplemental scripts -->
    <script>
        var checkbox = document.getElementById("set-gps");
        var notes = document.getElementById("notes");

        checkbox.addEventListener("change", function() {
            notes.disabled = checkbox.checked
        });

        function resetNotes() {
            notes.disabled = false
        }

        // Enable bootstrap shit
        let datepickerOptions = {
            format: "dd.mm.yyyy",
            todayBtn: true,
            autoclose: true,
            todayHighlight: true
        }

        // ToDo: Unfuck
        $(document).ready(function () {
            $('.input-group.date').datepicker(datepickerOptions);
            //$('.dateEnd').datepicker(datepickerOptions);
        })

        // Form validation
        var forms = document.querySelectorAll('.needs-validation')
    
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
    
            form.classList.add('was-validated')
            }, false)
        })
    </script>
</body>
</html>