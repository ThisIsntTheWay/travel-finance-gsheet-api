    <!-- Supplemental scripts -->
    <script>
        var checkbox = document.getElementById("set-gps");
        var notes = document.getElementById("notes");

        checkbox.addEventListener("change", function() {
            notes.disabled = checkbox.checked
        });

        function resetNotes() {
            notes.disabled = false
        }

        // Enable bootstrap shit
        let options = {
            format: 'dd.mm.yyyy',
            autoclose: true,
            startDate: '-3d',
            showOnFocus: false
        }

        // ToDo: Unfuck
        $(document).ready(function () {
            $('.date').datepicker(options);

            $('#beginning + .input-group-append').on('click', function () {
                $('#beginning').datepicker('show');
            });
            $('#end + .input-group-append').on('click', function () {
                $('#end').datepicker('show');
            });
        })
    </script>
